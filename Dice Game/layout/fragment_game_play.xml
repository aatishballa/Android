<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mc9509dw.dicefinal.gamePlay_fragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:text="@string/lbl_playerName"
                    android:layout_width="187dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textSize="18sp"
                    android:textAlignment="viewStart" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lbl_rollsLeft"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:text="@string/lbl_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:fontFamily="cursive"
                android:layout_weight="0.07"
                android:textColor="#ff0000"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="54dp"
                    app:srcCompat="@drawable/die6"
                    android:id="@+id/lbl_img_6"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="53dp"
                    app:srcCompat="@drawable/die5"
                    android:id="@+id/lbl_img_5"
                    android:layout_weight="0.02"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/die4"
                    android:id="@+id/lbl_img_4"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="20dp"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="79dp"
                    app:srcCompat="@drawable/die1"
                    android:id="@+id/btn_1" />

                <ImageButton
                    android:layout_width="83dp"
                    android:layout_height="80dp"
                    app:srcCompat="@drawable/die2"
                    android:id="@+id/btn_2" />

                <ImageButton
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/die3"
                    android:id="@+id/btn_3" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/die4"
                    android:id="@+id/btn_4" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/die5"
                    android:id="@+id/btn_5" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="15dp">

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="@string/btn_roll"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_roll"
                    android:layout_weight="1" />

                <Button
                    android:text="@string/getScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_getScore"
                    android:layout_weight="2.04" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
