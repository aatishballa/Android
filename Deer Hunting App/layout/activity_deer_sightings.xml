<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mc9509dw.finalapp.DeerSightings"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/lbl_numDeers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numDeers"
        android:textAlignment="textEnd"
        app:layout_constraintRight_toLeftOf="@+id/txt_time"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/txt_num_deers"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="14dp" />

    <TextView
        android:id="@+id/lbl_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:textAlignment="textEnd"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/lbl_numDeers"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/lbl_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/distance"
        android:textAlignment="textEnd"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt_time"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_age" />

    <TextView
        android:id="@+id/lbl_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/direction"
        android:textAlignment="textEnd"
        android:layout_marginStart="32dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_direction"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/lbl_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type"
        android:textAlignment="textEnd"
        android:layout_marginStart="32dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_type"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/lbl_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Points"
        android:textAlignment="textEnd"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_points"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/lbl_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="119dp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_points"
        android:layout_marginEnd="119dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_save"
        android:layout_marginLeft="119dp" />

    <TextView
        android:id="@+id/lbl_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sex"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/lbl_points"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_sex"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_points" />

    <Button
        android:id="@+id/btn_save"
        android:onClick="addDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        app:layout_constraintRight_toLeftOf="@+id/btn_gotomain"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btn_gotomain"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="11dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_gotomain" />

    <EditText
        android:id="@+id/txt_direction"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/txt_dis"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_time"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txt_points" />

    <EditText
        android:id="@+id/txt_points"
        android:layout_width="75dp"
        android:layout_height="59dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="@+id/lbl_sex"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="@+id/lbl_age"
        android:layout_marginTop="57dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="56dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_save"
        app:layout_constraintTop_toTopOf="@+id/txt_type"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp" />

    <EditText
        android:id="@+id/txt_num_deers"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="79dp"
        app:layout_constraintRight_toRightOf="@+id/lbl_distance"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lbl_numDeers"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="79dp" />

    <EditText
        android:id="@+id/txt_dis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt_time"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="4dp"
        app:layout_constraintLeft_toRightOf="@+id/lbl_distance"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/txt_age"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/lbl_age"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintRight_toRightOf="@+id/txt_type"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/lbl_age"
        app:layout_constraintLeft_toRightOf="@+id/lbl_age"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="14dp" />

    <Button
        android:id="@+id/button"
        android:onClick="showAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btn_gotomain"
        android:layout_marginStart="23dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="11dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_save"
        android:layout_marginLeft="23dp" />

    <EditText
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/txt_direction"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_num_deers"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txt_direction" />

    <EditText
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/txt_direction"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_direction"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txt_direction" />

    <EditText
        android:id="@+id/txt_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/txt_type"
        android:layout_marginTop="99dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_type"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/txt_type" />

    <Button
        android:text="Go To Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_gotomain"
        android:onClick="gotomain"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
